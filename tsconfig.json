{
  "compilerOptions": {
    // Target JavaScript version
    "target": "es6",

    // Module system
    "module": "es6",

    // Enable strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,

    // Allows default imports from CommonJS modules (if needed later)
    "esModuleInterop": true,

    // Skip type checks in node_modules
    "skipLibCheck": true,

    // Output configuration
    "outDir": "./dist",        // compiled JS goes here
    "rootDir": "./src",        // source TS files live here
    "sourceMap": false,         // generate .map files for debugging
    "declaration": false,       // generate .d.ts files
    "declarationMap": false,    // generate .d.ts.map files

    // Module handling
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // JSX support (if you ever use React)
    "jsx": "react-jsx"
  },

  // Include all TS files inside src folder
  "include": ["src/**/*"],

  // Exclude node_modules and dist from compilation
  "exclude": ["node_modules", "dist"]
}
